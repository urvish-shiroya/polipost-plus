<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_16sdp">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/searchContainer"
        style="@style/application_search_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/_48sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/bg_app_search_container"
        android:hint="@string/search_hint"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/text_color_black"
        android:textColorHint="@color/text_color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/buttonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchContainer" />


    <com.polipost.core.helpers.ErrorContainer
        android:id="@+id/error_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:isButtonVisible="false"
        app:layout_constraintBottom_toTopOf="@id/buttonApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchContainer" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/buttonApply"
        style="@style/application_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/bg_app_button"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/apply"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>